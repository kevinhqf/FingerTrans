<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/ThemeBG"
    app:cardCornerRadius="3dp"
    app:contentPadding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/da_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textSize="18sp" />

        <EditText
            android:editable="false"
            android:id="@+id/da_tv_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/da_tv_title"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:textSize="14sp"
            android:textColor="#757575"
            android:inputType="none"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="@string/string_example"
            android:textIsSelectable="true"
             />

        <TextView
            android:id="@+id/da_tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/da_tv_example"
            android:padding="5dp"
            android:text="@string/da_tip" />

        <TextView
            android:id="@+id/da_btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/da_tv_tip"
            android:background="@drawable/item_background"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/star_me_btn"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>